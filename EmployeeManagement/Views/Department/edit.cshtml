@model Department

@{
  ViewData["Title"] = "Edit";
}

<h1>Update your details</h1>

@* tag helpers*@

<form asp-asp-controller="Department" asp-action="Edit" method="POST">
    <input type="hidden" asp-for="Id">
  <div class="form-group">
    
    <label asp-for="DepartmentCode"></label>
    <input type="text" class="form-control" asp-for="DepartmentCode" placeholder="Department Id">
    <span asp-validation-for="DepartmentCode" class="text-danger"></span>

  </div>
  <div class="form-group">
    <label asp-for="DepartmentName"></label>
    <input type="text" class="form-control" asp-for="DepartmentName" placeholder="Department Name">
    <span asp-validation-for="DepartmentName" class="text-danger"></span>
  </div>

  <div class="form-group">
    <label asp-for="Location"></label>
    <textarea type="text" class="form-control" asp-for="Location" placeholder="Location"></textarea>
    <span asp-validation-for="Location" class="text-danger"></span>
  </div>

  <div class="form-group">
    
    <label asp-for="Description"></label>
    <input type="text" class="form-control" asp-for="Description" placeholder="Description">
    <span asp-validation-for="Description" class="text-danger"></span>

  </div>

  <div class="form-group">
    
    <label asp-for="CreatedDate"></label>
    <input type="text" class="form-control" asp-for="CreatedDate" placeholder="Created Date">
    <span asp-validation-for="CreatedDate" class="text-danger"></span>

  </div>

  
  <button type="submit" class="btn btn-primary">Update</button>
</form>