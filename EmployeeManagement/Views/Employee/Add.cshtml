@model Employee;

@{
  ViewData["Title"] = "Add New";
  string[] genders = { "Male", "Female", "Others" };
  var depOptions = ViewData["depOptions"] as List<Department>;
}
<h1>Add new employee</h1>

@* tag helpers *@
<form asp-controller="Employee" asp-action="Add" method="POST">
  <div class="form-group">
    <select class="custom-select" asp-for="DepartmentId">
      <option selected>Select Department</option>
      @foreach (var dep in depOptions)
      {
        <option value="@dep.Id">@dep.DepartmentName</option>
      }
      </select>
    </div>
    <div class="form-group">
      <label asp-for="FirstName"></label>
      <input type="text" class="form-control" asp-for="FirstName" placeholder="First Name">
      <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="form-group">
      <label asp-for="LastName"></label>
      <input type="text" class="form-control" asp-for="LastName" placeholder="Last Name">
      <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <div class="form-group">
      <label asp-for="Address"></label>
      <input type="text" class="form-control" asp-for="Address" placeholder="Address">
    </div>

    <div class="form-group">
      <div>Gender</div>
      
      @foreach (var gender in genders)
    {
      <div class="form-check-inline">
        <input class="form-check-input" type="radio" name="gender" id="@gender" asp-for="Gender" value="@gender[0]">
        <label class="form-check-input" for="inlineRadio1">@gender</label>
      </div>
    }

  </div>

  <div class="form-group">
    <label asp-for="Salary"></label>
    <input type="text" class="form-control" asp-for="Salary" placeholder="Salary">
  </div>

  <button type="submit" class="btn btn-primary">Add Employee</button>
</form>
</h1>