@model Employee

@{
  ViewData["Title"] = "Add New";
}

<h1>Add new employee</h1>

@* tag helpers*@

<form asp-asp-controller="Employee" asp-action="Add" method="POST">
  <div class="form-group">
    <label asp-for="FirstName"></label>
    <input type="text" class="form-control" asp-for="FirstName" placeholder="First Name">
    <span asp-validation-for="FirstName" class="text-danger"></span>

  </div>
  <div class="form-group">
    <label asp-for="LastName"></label>
    <input type="text" class="form-control" asp-for="LastName" placeholder="Last Name">
    <span asp-validation-for="LastName" class="text-danger"></span>
  </div>

  <div class="form-group">
    <label asp-for="Address"></label>
    <textarea type="text" class="form-control" asp-for="Address" placeholder="Address"></textarea>
    <span asp-validation-for="Address" class="text-danger"></span>
  </div>

  <div class="form-group">
        <label asp-for="Gender"></label>
        <br>
        <input type="radio"  asp-for="Gender" name="gender" value="Male">
        <label for="male">Male</label><br>
        <input type="radio"  asp-for="Gender" name="gender" value="Female">
        <label for="female">Female</label><br>
        <input type="radio" asp-for="Gender" name="gender" value="Unspecified">
        <label for="other">Unspecified</label>
        <span asp-validation-for="Gender" class='text-danger'></span>

  <div class="form-group">
    <label asp-for="Salary"></label>
    <input type="number" class="form-control" asp-for="Salary" placeholder="Salary">
    <span asp-validation-for="Salary" class="text-danger"></span>
  </div>

  <button type="submit" class="btn btn-primary">Add Employee</button>
</form>